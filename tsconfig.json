{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*", "types/*"],
  "exclude": ["node_modules/**/*"],
  "compilerOptions": {
    "types": ["svelte"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      // "~" : ["src"],
    },
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error"
  }
}
